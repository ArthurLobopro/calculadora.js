{
  "name": "calculadora.js",
  "version": "2.0.0",
  "description": "Calculadora Simples",
  "main": "dist/main/main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "yarn tsc && yarn sass-compiler --compile && electron-forge package",
    "make": "yarn tsc && yarn sass-compiler --compile && electron-forge make",
    "update-lib": "node update-lib.js"
    },
  "keywords": [],
  "author": "Arthur Lobo",
  "license": "MIT",
  "dependencies": {
    "electron-frame": "^1.2.5",
    "electron-squirrel-startup": "^1.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.6.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.4",
    "@electron-forge/maker-deb": "^6.0.4",
    "@electron-forge/maker-rpm": "^6.0.4",
    "@electron-forge/maker-squirrel": "^6.0.4",
    "@electron-forge/maker-zip": "^6.0.4",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "electron": "^22.2.0",
    "sass-compiler": "1.3.1",
    "typescript": "^4.9.5"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./build/icon.ico",
        "ignore": [
          "\\.git",
          "\\.scss",
          "/build",
          "\\.vscode",
          "yarn",
          "\\.ts"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "calculadora.js",
            "setupIcon": "./build/icon.ico",
            "iconURL": "./build/icon.ico",
            "setupExe": "${name}-${version}-setup.exe"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "platforms": [
            "linux"
          ],
          "config": {
            "name": "calculadora.js",
            "productName": "Calculadora.js",
            "categories": [
              "Utility"
            ],
            "description": "Calculadora simples feita com electron",
            "genericName": "Calculadora",
            "icon": "./assets/icon.png"
          }
        },
        {
          "name": "@electron-forge/maker-rpm",
          "platforms": [],
          "config": {}
        }
      ]
    }
  }
}
